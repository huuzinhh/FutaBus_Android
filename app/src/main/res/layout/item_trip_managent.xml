<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_margin="4dp"
    android:elevation="1dp"
    android:gravity="center_vertical">

    <!-- Phần thông tin tuyến xe -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTuyenXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuyến: Huế - Đà Nẵng"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: 2h"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvGiaVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá vé: 100.000đ"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <!-- Phần nút thao tác -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="8dp">


        <ImageView
            android:id="@+id/btnSua"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="13dp"
            android:contentDescription="Sửa"
            android:src="@drawable/update" />

        <ImageView
            android:id="@+id/btnXoa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/delete"
            android:contentDescription="Xóa" />
    </LinearLayout>
</LinearLayout>