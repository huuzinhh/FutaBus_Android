<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_fragment_account"
    android:paddingTop="24dp">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/top_bar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/iconMenu"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="Menu icon"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text="Tài khoản"
            android:textColor="@color/top_bar_text"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/myScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/avatar"
                android:background="@color/image_bg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_avatar"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp"
                    android:text="Họ và tên:"
                    android:textColor="@color/text_primary" />/>
                <EditText
                    android:id="@+id/editFullName"
                    android:hint="Nhập họ và tên"
                    android:enabled="false"
                    style="@style/InputStyle"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/card_bg"/>

                <TextView
                    android:text="Giới tính:"
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/text_primary" />/>

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:enabled="false"
                    android:clickable="false"

                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:spinnerMode="dropdown"
                    android:background="#E0E0E0"
                    android:textColor="@color/text_primary"
                    android:popupBackground="#E0E0E0"/>

                <TextView
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="8dp"
                    android:text="Năm sinh:"
                    android:textColor="@color/text_primary" />/>
                <EditText
                    android:id="@+id/editBirthDay"
                    android:hint="Nhập năm sinh"
                    android:enabled="false"
                    style="@style/InputStyle"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/card_bg"/>

                <TextView android:text="Số điện thoại:"
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp" />
                <EditText
                    android:id="@+id/editPhone"
                    android:hint="Nhập số điện thoại"
                    android:enabled="false"
                    style="@style/InputStyle"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/card_bg"/>/>

                <TextView
                    android:text="Email:"
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp" />
                <EditText
                    android:id="@+id/editEmail"
                    android:hint="Nhập email"
                    android:enabled="false"
                    style="@style/InputStyle"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/card_bg"/>/>

                <TextView
                    android:text="Địa chỉ:"
                    style="@style/LabelStyle"
                    android:layout_marginBottom="5dp" />
                <EditText
                    android:id="@+id/editAddress"
                    android:hint="Nhập địa chỉ"
                    android:enabled="false"
                    style="@style/InputStyle"
                    android:textColor="@color/text_primary"
                    android:backgroundTint="@color/card_bg"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/logout_bg"
                android:textColor="@color/button_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hủy"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/logout_bg"
                    android:textColor="@color/button_text"/>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="8dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/highlight_text"
                    android:textColor="@color/button_text"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:background="@color/sidebar_bg"
        android:visibility="gone"
        android:elevation="4dp"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_orange"
                android:contentDescription="Quay lại" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tài khoản"
                android:textColor="@color/highlight_text"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/avatarUser"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_avatar"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Admin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="@color/button_text"/>

        <TextView
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_top_bottom"
            android:text="Đổi mật khẩu"
            android:textColor="@color/button_text"
            android:gravity="center"
            android:padding="12dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:textSize="14sp"
            android:textColor="@color/switch_text"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:backgroundTint="@color/logout_bg"
            android:textColor="@color/logout_text" />
    </LinearLayout>

</RelativeLayout>
