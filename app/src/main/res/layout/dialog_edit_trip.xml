<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tuyến xe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn tuyến xe"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerTuyenXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Thời điểm đi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời điểm đi"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/etThoiDiemDi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD HH:mm"
            android:inputType="datetime"
            android:focusable="false" />

        <!-- Thời điểm đến -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời điểm đến"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/etThoiDiemDen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="YYYY-MM-DD HH:mm"
            android:inputType="datetime"
            android:focusable="false" />

        <!-- Giá vé -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá vé"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/etGiaVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Nhập giá vé" />

        <!-- Chọn xe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn xe"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Chọn tài xế -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn tài xế"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerTaiXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <Spinner
            android:id="@+id/spinnerTrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
