<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FutasBus" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="insideBackgroundColor">@color/white</item>
        <item name="backgroundColor">@color/futa_orange</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.FutasBus" parent="Base.Theme.FutasBus" />
    <style name="Background">
        <item name="android:background">@color/futa_orange</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button">
        <item name="android:backgroundTint">@color/futa_orange</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabSelectedTextColor">@color/futa_orange</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/futa_orange</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>
    <style name="edit_text">
        <item name="android:textColor">@color/light_gray</item>
    </style>
    <style name="switcher_khuhoi">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Info_User">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>